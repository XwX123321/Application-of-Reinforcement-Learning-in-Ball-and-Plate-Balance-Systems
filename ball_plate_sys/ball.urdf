<robot name="ball">
  <link name="base_link">
    <collision>
      <geometry>
        <sphere radius="0.1"/>
      </geometry>
      <material name="ball_material">
        <contact>
          <rolling_friction value="0.01"/>
          <restitution value="0.0"/>
        </contact>
      </material>
    </collision>
    <inertial>
      <mass value="5.0"/>  <!-- 增加球的质量到5公斤 -->
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>
</robot>